<LinearLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.emildiaz.runner.RunnerMapActivity">

    <fragment
        android:id="@+id/run_history"
        android:name="com.emildiaz.runner.fragment.RunHistoryFragment"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:id="@+id/details"
        android:layout_width="450dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/start_tracking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/run_history"
            android:onClick="startTracking"
            android:text="Start"
            />

        <Button
            android:id="@+id/stop_tracking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/start_tracking"
            android:onClick="stopTracking"
            android:text="Stop"
            />

        <TextView
            android:id="@+id/location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_tracking"
            />

        <TextView
            android:id="@+id/address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stop_tracking"
            />

        <fragment
            android:id="@+id/map"
            android:name="com.emildiaz.runner.fragment.MapFragment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_text"
            map:mapType="terrain"
            map:cameraTargetLat="40.7491870"
            map:cameraTargetLng="-73.9405630"
            map:uiCompass="true"
            map:uiZoomControls="true"
            map:uiZoomGestures="true"
            map:uiScrollGestures="true"
            map:uiRotateGestures="false"
            map:uiTiltGestures="false"
            tools:ignore="MissingPrefix"
            />
    </LinearLayout>
</LinearLayout>
